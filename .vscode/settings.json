{
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.pythonPath": "venv/bin/python",
    "python.linting.pylintPath": "venv/bin/pylint",
    "files.exclude":{
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/Thumbs.db": true,
      "**/*.pyc": {"when": "$(basename).py"},
      "**/__pycache__": true,
      "**/*.pytest_cache": true
    }
  }